#/bin/bash

echo "Deseja criar um usuario agora ? (y/n)"

read user

if [ "$user" = y ]
then
echo -e "\033[1;32mDigite o nome para o usuario:\033[0;37m"; read -p " " name
echo -e "\033[1;32mSenha para o usuario $name:\033[0;37m"; read -p " " pass
useradd -M -s /bin/false $name
if cat /etc/passwd |grep $name: |grep -vi [a-z]$name |grep -v [0-9]$name > /dev/null
then
echo -e "\033[1;31mUsuario $name ja existe\033[0m"
else
( echo "$pass";echo "$pass" ) | passwd $name 2> /dev/null
